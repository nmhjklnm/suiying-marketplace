{
  "description": "Desktop notifications for Claude Code tasks",
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ccnotify.py UserPromptSubmit",
        "timeout": 5000
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ccnotify.py Stop",
        "timeout": 5000
      }
    ],
    "Notification": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ccnotify.py Notification",
        "timeout": 5000
      }
    ]
  }
}
